
    class Persona{
        int edad;
        String nombre;
        String telefono;
    }

    class Cliente extends Persona{
        int credito;
    }
    class Trabajador extends Persona {
        double salario;

    }
    public class Main {
    public static void main(String[] args) {
        //Crea una clase Persona con las siguientes variables:
        //La edad
        //El nombre
        //El teléfono
        //
        //Una vez creada la clase, crea una nueva clase Cliente que herede de Persona, esta nueva clase tendrá la variable credito solo para esa clase.
        //Crea ahora un objeto de la clase Cliente que debe tener como propiedades la edad, el telefono, el nombre y el credito, tienes que darles valor y mostrarlas por pantalla.
        //Una vez hecho esto, haz lo mismo con la clase Trabajador que herede de Persona, y con una variable salario que solo tenga la clase Trabajador.

        Cliente clVip = new Cliente();
        clVip.edad = 53;
        clVip.nombre="David";
        clVip.telefono="66622XXXX";
        clVip.credito=3000;

        System.out.println("Cliente VIP : " + clVip.nombre + " de " + clVip.edad + " años, con teléfono " + clVip.telefono + " dispone de " + clVip.credito + "€ de crédito.");

        Trabajador currante1 = new Trabajador();
        currante1.edad = 53;
        currante1.nombre="David";
        currante1.telefono="66622XXXX";
        currante1.salario=28000;
        System.out.println("Trabajador : " + currante1.nombre + " de " + currante1.edad + " años, con teléfono " + currante1.telefono + " tiene un salario de " + currante1.salario + "€ brutos al año.");

    }
}
